<section class="section">
{{> 'partials/breadcrumbs_common' }}
    <h1 class="title is-1">
        Bot: {{bot.Name}}
    </h1>
    <p class="subtitle">
        {{bot.Info}}
    </p>

    <div class="block">
        <div class="box">
            <h1 class="title is-big">Variables</h1>
            {{> 'partials/bot/taglist_variable_value' }}

        </div>
    </div>

    {{#each bot.SortedActionData as |actionData actionDataIndex|}} <!-- Action:Start -->
        {{#with_action_from_bot botGroup bot actionDataIndex as |action|}}
            {{> 'partials/action/card_box' }}
        {{/with_action_from_bot}}
    {{/each}} <!-- Action:End -->

</section>
