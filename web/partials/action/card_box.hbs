<div class="card">
    <header class="card-header">
        <p class="card-header-title">
            <span style="padding-right: 0.75em;">
            {{#with_bot_action bot action}}
                <span class="tag {{#if this.IsAvailable}}is-primary{{else}}is-danger{{/if}}">
                Score: {{format_float64 "%.2f" this.FinalScore}}
                </span>
            {{/with_bot_action}}
            </span>

            {{action.Name}}

            <span style="padding-left: 1.5em">
                <span class="icon has-text-info">
                  <i class="fas fa-info-circle"></i>
                </span>
                <span class="icon has-text-success">
                  <i class="fas fa-check-square"></i>
                </span>
                <span class="icon has-text-warning">
                  <i class="fas fa-exclamation-triangle"></i>
                </span>
                <span class="icon has-text-danger">
                  <i class="fas fa-ban"></i>
                </span>
            </span>
        </p>
        <button class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
        </button>
    </header>

    <div class="card-content">

        {{> 'partials/consider/table' }}
    </div>
</div>