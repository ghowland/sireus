
<div class="block">
    <table class="table">
        <thead>
        <tr>
            <th><span class="has-tooltip-arrow" data-tooltip="Consideration Name, hover shows: Evaluation == Raw Score">Name</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Raw Score, the result of the Variable Evaluation">Raw</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Range Value Start, transforms Raw Score to a Range Score of 0">Start</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Range Value End, transforms Raw Score to a Range Score of 1">End</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Ranged Score, Raw has been transformed by the Range Start/End">Ranged</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Curve, takes the Ranged Score and applies it to the X axis of a 0-1 Curve">Curve</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Curved Score, after Ranged was applied to the Curve">Curved</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Scoring Weight, how important this consideration is compared to it's state neighbors">Weight</span></th>
            <th><span class="has-tooltip-arrow" data-tooltip="Final Score, fully processed after multiplying Curved Score by the Scoring Weight">Final</span></th>
        </tr>
        </thead>
        {{#if_consider_length Considerations 10}}
            <tfoot>
            <tr>
                <th><span class="has-tooltip-arrow" data-tooltip="Consideration Name, hover to see the Evaluation and the Raw score it produces">Name</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Raw Score, not put through range, curves or weighted">Raw</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Range Value Start, transforms Raw Score to a Range Score of 0">Start</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Range Value End, transforms Raw Score to a Range Score of 1">End</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Ranged Score, Raw has been transformed by the Range Start/End">Ranged</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Curve, takes the Ranged Score and applies it to the X axis of a 0-1 Curve">Curve</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Curved Score, after Ranged was applied to the Curve">Curved</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Scoring Weight, how important this consideration is compared to it's state neighbors">Weight</span></th>
                <th><span class="has-tooltip-arrow" data-tooltip="Final Score, fully processed after multiplying Curved Score by the Scoring Weight">Final</span></th>
            </tr>
            </tfoot>
        {{/if_consider_length}}
        <tbody>
        </tbody>

        {{#each condition.Considerations as |consider considerIndex|}} <!-- Action Consideration:Start -->
            <tr>
                <th><span class="has-tooltip-arrow" data-tooltip="{{consider.Evaluate}} == {{get_bot_condition_data_consideration_raw_score bot condition consider}}">{{consider.Name}}</span></th>
                <td>{{get_bot_condition_data_consideration_raw_score bot condition consider}}</td>
                <td>{{consider.RangeStart}}</td>
                <td>{{consider.RangeEnd}}</td>
                <td>{{get_bot_condition_data_consideration_ranged_score bot condition consider}}</td>
                <td><button class="button is-small" onclick="GetPlot('{{consider.CurveName}}', {{get_bot_condition_data_consideration_ranged_score bot condition consider}})">{{consider.CurveName}}</button></td>
                <td>{{get_bot_condition_data_consideration_curved_score bot condition consider}}</td>
                <td>{{consider.Weight}}</td>
                <td><strong>{{get_bot_condition_data_consideration_final_score bot condition consider}}</strong></td>
            </tr>

        {{/each}} <!-- Action Consideration:End -->

    </table>
</div>