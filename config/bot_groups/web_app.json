{
  "name": "Web App",
  "info": "Example Web Application",
  "queries": [
    {
      "query_server": "prometheus_primary",
      "query_type": 0,
      "name": "Window Services",
      "info": "Using Windows Services to test things out",
      "query": "windows_service_state"
    },
    {
      "query_server": "prometheus_primary",
      "query_type": 0,
      "name": "Service Status",
      "info": "Getting information from a different query",
      "query": "windows_service_status"
    },
    {
      "query_server": "prometheus_primary",
      "query_type": 0,
      "name": "Disk Free Space",
      "info": "Getting free bytes on the disks",
      "query": "windows_logical_disk_free_bytes"
    },
    {
      "query_server": "prometheus_primary",
      "query_type": 0,
      "name": "CPU Usage",
      "info": "Getting the CPU usage for the system",
      "query": "100 - (avg by (instance) (irate(windows_cpu_time_total{mode=\"idle\"}[1m])) * 100)"
    },
    {
      "query_server": "prometheus_primary",
      "query_type": 0,
      "name": "Network Usage",
      "info": "Getting the Network usage for the system",
      "query": "irate(windows_net_bytes_total[30s])"
    }
  ],
  "bot_extractor": {
    "query_name": "Window Services",
    "key": "node"
  },
  "variables": [
    {
      "type": 0,
      "name": "service_running",
      "bot_key": "name",
      "query_name": "Window Services",
      "query_key": "state",
      "query_key_value": "running",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "service_stopped",
      "bot_key": "name",
      "query_name": "Window Services",
      "query_key": "state",
      "query_key_value": "stopped",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "service_unknown",
      "bot_key": "name",
      "query_name": "Window Services",
      "query_key": "state",
      "query_key_value": "unknown",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "service_paused",
      "bot_key": "name",
      "query_name": "Window Services",
      "query_key": "state",
      "query_key_value": "paused",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "status_ok",
      "bot_key": "name",
      "query_name": "Service Status",
      "query_key": "status",
      "query_key_value": "ok",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "status_service",
      "bot_key": "name",
      "query_name": "Service Status",
      "query_key": "status",
      "query_key_value": "service",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 0,
      "name": "status_error",
      "bot_key": "name",
      "query_name": "Service Status",
      "query_key": "status",
      "query_key_value": "error",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 1,
      "name": "disk_free_space_C",
      "bot_key": "",
      "query_name": "Disk Free Space",
      "query_key": "volume",
      "query_key_value": "C:",
      "bool_range_start": 1,
      "bool_range_end": 1,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 1,
      "name": "disk_free_space_D",
      "bot_key": "",
      "query_name": "Disk Free Space",
      "query_key": "volume",
      "query_key_value": "D:",
      "bool_range_start": 0,
      "bool_range_end": 0,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 1,
      "name": "cpu_usage",
      "bot_key": "",
      "query_name": "CPU Usage",
      "query_key": "",
      "query_key_value": "",
      "bool_range_start": 0,
      "bool_range_end": 0,
      "bool_invert": false,
      "export": false
    },
    {
      "type": 1,
      "name": "network_usage_{{nic}}",
      "bot_key": "",
      "query_name": "Network Usage",
      "query_key": "",
      "query_key_value": "",
      "bool_range_start": 0,
      "bool_range_end": 0,
      "bool_invert": false,
      "export": false
    }
  ],
  "states": [
    {
      "name": "Operation",
      "info": "Basic operational states, to group Actions",
      "labels": ["Normal", "Problem", "Correction", "Resolved", "Escalating", "EscalatingWait"]
    }
  ],
  "lock_timers": [
    {
      "type": 1,
      "name": "Single Bot Lock",
      "info": "Per bot lock, so that each bot can operate independently.  Use for Node or Agent level control."
    },
    {
      "type": 0,
      "name": "Full Bot Group Lock",
      "info": "Lock for controlling the entire Bot Group.  Use for Service or Platform level control."
    }
  ],
  "bot_timeout_stale": 60,
  "bot_timeout_remove": 120,
  "action_score_min": 0.6,
  "actions": [
    {
      "name": "Action Y",
      "info": "Try to fix this thing by doing something",
      "is_disabled": false,
      "weight": 2.0,
      "weight_min": 0,
      "required_lock_timers": [
        "Single Bot Lock"
      ],
      "required_states": [
        "Operation.Normal"
      ],
      "set_bot_states": [
        "Operation.Problem"
      ],
      "considerations": [
        {
          "name": "Consider A",
          "weight": 7.0,
          "curve": "inc_sigmoid",
          "range_start": 0,
          "range_end": 100
        },
        {
          "name": "Consider Boolean",
          "weight": 2.0,
          "curve": "inc_boolean",
          "range_start": 0,
          "range_end": 1
        }
      ],
      "command": {
        "type": 0,
        "content": "echo This fixes everything",
        "success_status": 0,
        "success_content": "",
        "lock_timer_duration": "30s",
        "host_exec_key": "windows.laptop.ghowland"
      }
    },
    {
      "name": "Action Z",
      "info": "Try to fix this thing by doing something",
      "is_disabled": false,
      "weight": 2.0,
      "weight_min": 0,
      "required_lock_timers": [
        "Single Bot Lock"
      ],
      "required_states": [
        "Operation.Normal"
      ],
      "set_bot_states": [
        "Operation.Problem"
      ],
      "considerations": [
        {
          "name": "Consider B",
          "weight": 7.0,
          "curve": "inc_smooth",
          "range_start": 0,
